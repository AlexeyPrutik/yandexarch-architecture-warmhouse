@startuml To-Be Context
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

Person(home_owner, "Владелец дома", "Пользователь экосистемы", "Самостоятельно настраивает умный дом, создает сценарии")
Person(partner, "Партнер", "Производитель устройств", "Интегрирует свои устройства в экосистему")
Person(support, "Техподдержка", "Сотрудник компании", "Оказывает консультационную поддержку")

System(ecosystem, "Экосистема 'Умный дом'", "SaaS платформа для управления умным домом\n• Управление отоплением\n• Управление освещением\n• Контроль безопасности\n• Автоматизация сценариев")

System_Ext(heating_system, "Система отопления", "Умные термостаты, котлы", "Поддерживает комфортную температуру")
System_Ext(lighting_system, "Система освещения", "Умные лампы, выключатели", "Обеспечивает освещение помещений")
System_Ext(security_system, "Система безопасности", "Камеры, датчики, ворота", "Обеспечивает безопасность дома")
System_Ext(partner_devices, "Устройства партнеров", "Сторонние IoT устройства", "Расширяют функциональность экосистемы")

Rel(home_owner, ecosystem, "Самостоятельно настраивает\nуправляет устройствами\nсоздает сценарии")
Rel(partner, ecosystem, "Интегрирует устройства\nпредоставляет драйверы")
Rel(support, ecosystem, "Консультирует пользователей\nмониторит работу системы")

Rel(ecosystem, heating_system, "Регулирует температуру\nполучает телеметрию")
Rel(ecosystem, lighting_system, "Управляет освещением\nнастраивает сценарии")
Rel(ecosystem, security_system, "Контролирует доступ\nведет видеонаблюдение")
Rel(ecosystem, partner_devices, "Поддерживает подключение\nстандартизирует протоколы")

@enduml